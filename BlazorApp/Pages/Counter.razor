@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Up</button>
<button class="btn btn-primary" @onclick="DecrementCount">Down</button>
<button class="btn btn-primary" @onclick="Byten">Super Up</button>
<button class="btn btn-primary" @onclick="Subten">Super Down</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        currentCount--;
    }

    private void Byten()
    {
        currentCount += 10;
    }

    private void Subten()
    {
        currentCount -=10; 
    }

}
