@page "/counter"

<PageTitle>Awesome Counter</PageTitle>

<h1>Benevolent Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="Byten">Click Me</button>
<button class="btn btn-primary" @onclick="DecrementCount">Click me to see minus</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        currentCount--;
    }

    private void Byten()
    {
        currentCount += 10;
    }

    private void Subten()
    {
        currentCount -=10; 
    }

}
